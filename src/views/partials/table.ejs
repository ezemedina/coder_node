<div id="informacion" class="container">
    <p class="h1 my-3">Vista de productos</p>
    <% if( productos.length===0 ){ %>
        <div class="alert alert-warning" role="alert">
            No se encontraron productos.
        </div>
        <% } else{ %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(function(producto) { %>
                        <tr>
                            <th scope="row">
                                <%= producto.id %>
                            </th>
                            <td>
                                <%= producto.title %>
                            </td>
                            <td>
                                $<%= producto.price %>
                            </td>
                            <td><img src="<%= producto.thumbnail %>" alt="thumbnail" width="30" height="30"></td>
                        </tr>
                        <% }); %>

                </tbody>
            </table>
            <% } %>
</div>